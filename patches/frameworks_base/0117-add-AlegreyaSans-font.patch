diff --git a/packages/overlays/FontAlegreyaSansOverlay/AndroidManifest.xml b/packages/overlays/FontAlegreyaSansOverlay/AndroidManifest.xml
new file mode 100644
index 00000000000..d430bce6393
--- /dev/null
+++ b/packages/overlays/FontAlegreyaSansOverlay/AndroidManifest.xml
@@ -0,0 +1,31 @@
